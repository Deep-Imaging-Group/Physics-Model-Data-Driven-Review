{
    "epochs": {
        "type": "int",
        "help": "Max traning epochs",
        "default": 200},
    "batch_size": {
        "type": "int",
        "help": "Batch size of training data",
        "default": 4},
    "lr": {
        "type": "float",
        "help": "Learning rate",
        "default": 1e-4},
    "gpus": {
        "type": "int",
        "help": "Number of GPUs",
        "default": 1},
    "gpu_ids": {
        "type": "int",
        "help": "GPU IDs",
        "nargs": "+",
        "default": [0]},
    "is_specified_gpus": {
        "type": "bool",
        "help": "Whether use the specified GPUs",
        "default": false},
    "cpus": {
        "type": "int",
        "help": "Number of CPUs",
        "default": 4},
    "data_root_dir": {
        "type": "str",
        "help": "Root dir of data",
        "default": "/mnt/nfs-data-storage/xwj/dataset/mayo_low_dose_512"},
    "dose": {
        "type": "str",
        "help": "Dose of low-dose CT",
        "default": "25%"},
    "is_vis_show": {
        "type": "bool",
        "help": "Whether show the loss curve and res with visdom",
        "default": false},
    "show_win": {
        "type": "float",
        "help": "Show window of the res",
        "nargs": "+",
        "default": [1.6128, 2.3808]},
